set nocompatible
set encoding=utf-8
set number
set hidden
filetype plugin indent on
syntax on
let mapleader = ","
set ruler
set showcmd
set laststatus=2
set listchars=tab:▸\ ,eol:¬,nbsp:.
set nobackup
set noswapfile
set autoindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set foldmethod=indent
nmap ; :
set foldlevel=99
set foldlevelstart=99
set virtualedit+=block
set clipboard+=unnamedplus,unnamed
set tags+=.tags
