startup_message off
autodetach on
vbell off
setenv SCREENTITLE auto
shell -$SHELL
escape ^Tt
defscrollback 10000
hardstatus alwayslastline '%{gk}[%{G}%H%{g}][%= %{wk}%?%-Lw%?%{=b kR}[%{W}%n%f %t%?(%u)%?%{=b kR}]%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[%m/%d %C%a]%{W}'

bind w windowlist -b
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION \^ resize
bind x command -c REGION
